{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "rootDir": "./",
        "baseUrl": ".",
        "resolveJsonModule": true,
        "paths": {
            "@/*": ["./*"],
            "@infra/*": ["./src/infra/*"],
            "@main/*": ["./src/main/*"],
            "@domain/*": ["./src/domain/*"],
            "@helpers/*": ["./src/helpers/*"],
            "@helpers": ["./src/helpers/index"],
            "@presentation/*": ["./src/presentation/*"]
        },
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["."]
}
